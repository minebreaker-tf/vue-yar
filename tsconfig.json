{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "test/**/*.ts",
        "test/**/*.js",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
