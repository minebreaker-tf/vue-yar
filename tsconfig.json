{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "strict": true,
        // "alwaysStrict": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
